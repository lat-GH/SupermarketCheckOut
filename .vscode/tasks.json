{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "label": "Run cpplint",
      "type": "shell",
      "command": "cpplint",
      "args": ["--extensions=cpp,h", "${file}"],
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": [
          {
            "regexp": "^(.+?):(\\d+):\\s+(.+?)\\s+\\[(.+?)\\]$",
            "file": 1,
            "line": 2,
            "message": 3
          }
        ]
      },
      "group": {
        "kind": "test",
        "isDefault": false
      }
    }
  ]
}
